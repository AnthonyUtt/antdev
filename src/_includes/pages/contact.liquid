{% layout 'layouts/page' %}

{% block content %}
<main id="main-content" tabindex="-1">
  <section class="[ contact-hero ]">
    <div class="[ wrapper ]">
      <div class="[ contact-hero__content ] [ flow ]">
        <h1 class="[ contact-hero__title ]">Book Your Free Discovery Session</h1>
        <p>Fill out the form below and I'll reach out within 1&ndash;2 business days to schedule a time that works for you.</p>
        <p>We'll spend 30&ndash;45 minutes (on Zoom or in person in the Roanoke Valley) talking through your business, your current tools, and where things feel slow or clunky. No pressure, no obligation&mdash;just an honest conversation to see if working together makes sense.</p>
      </div>
    </div>
  </section>

  <div class="[ wrapper ]">
    <section class="[ contact-form-section ]">
      <form
        name="discovery-session"
        action="/success/"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        class="[ contact-form ]"
      >
        <input type="hidden" name="form-name" value="discovery-session">
        <p class="[ visually-hidden ]">
          <label>Don't fill this out if you're human: <input name="bot-field"></label>
        </p>

        <div class="[ contact-form__field ]">
          <label for="name" class="[ contact-form__label ]">Name <span aria-hidden="true">*</span></label>
          <input
            type="text"
            id="name"
            name="name"
            required
            autocomplete="name"
            class="[ contact-form__input ]"
          >
        </div>

        <div class="[ contact-form__field ]">
          <label for="email" class="[ contact-form__label ]">Email <span aria-hidden="true">*</span></label>
          <input
            type="email"
            id="email"
            name="email"
            required
            autocomplete="email"
            class="[ contact-form__input ]"
          >
        </div>

        <div class="[ contact-form__field ]">
          <label for="phone" class="[ contact-form__label ]">Phone <span class="[ contact-form__optional ]">(optional)</span></label>
          <input
            type="tel"
            id="phone"
            name="phone"
            autocomplete="tel"
            class="[ contact-form__input ]"
          >
        </div>

        <div class="[ contact-form__field ]">
          <label for="business" class="[ contact-form__label ]">Business Name <span class="[ contact-form__optional ]">(optional)</span></label>
          <input
            type="text"
            id="business"
            name="business"
            autocomplete="organization"
            class="[ contact-form__input ]"
          >
        </div>

        <div class="[ contact-form__field ]">
          <label for="interest" class="[ contact-form__label ]">What are you most interested in?</label>
          <select id="interest" name="interest" class="[ contact-form__select ]">
            <option value="">Not sure yet</option>
            <option value="website">A new website</option>
            <option value="automations">Business &amp; workflow automations</option>
            <option value="custom-software">Custom software</option>
            <option value="other">Something else</option>
          </select>
        </div>

        <div class="[ contact-form__field ]">
          <label for="message" class="[ contact-form__label ]">Tell me a bit about your business and what you're hoping to solve <span class="[ contact-form__optional ]">(optional)</span></label>
          <textarea
            id="message"
            name="message"
            rows="5"
            class="[ contact-form__textarea ]"
          ></textarea>
        </div>

        <div class="[ contact-form__field ]">
          <label for="meeting-preference" class="[ contact-form__label ]">Meeting preference</label>
          <select id="meeting-preference" name="meeting-preference" class="[ contact-form__select ]">
            <option value="no-preference">No preference</option>
            <option value="zoom">Zoom</option>
            <option value="in-person">In person (Roanoke Valley)</option>
          </select>
        </div>

        <button type="submit" class="[ contact-form__submit ] [ button button--primary ]" data-umami-event="cta-contact-submit">
          Request Discovery Session
        </button>
      </form>
    </section>
  </div>
</main>
{% endblock %}
