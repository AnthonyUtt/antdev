<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Blog",
  "@id": "{{ site.baseUrl }}/blog/#blog",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.baseUrl }}/blog/"
  },
  "name": "{{ site.name }} Blog",
  "description": "Everything I've learned about building software for small businessesâ€”shared openly.",
  "url": "{{ site.baseUrl }}/blog/",
  "publisher": {
    "@type": "Organization",
    "@id": "{{ site.baseUrl }}/#organization",
    "name": "{{ site.name }}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.baseUrl }}/assets/images/logo.png"
    }
  },
  "blogPost": [
    {% for post in collections.blog %}{
      "@type": "BlogPosting",
      "@id": "{{ site.baseUrl }}{{ post.url }}#article",
      "headline": "{{ post.data.title }}",
      "url": "{{ site.baseUrl }}{{ post.url }}",
      "datePublished": "{{ post.data.date | w3DateFilter }}",
      "author": {
        "@type": "Person",
        "name": "{% if post.data.author %}{{ post.data.author }}{% else %}{{ site.authorName }}{% endif %}"
      }
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
</script>
