{% assign owner = site.copyright.owner %}
{% assign start_year = site.copyright.startYear %}
{% assign current_year = "now" | date: "%Y" | to_integer %}

{% if start_year < current_year %}
  {% capture year %}{{ start_year }} - {{ current_year }}{% endcapture %}
{% else %}
  {% assign year = current_year %}
{% endif %}

<footer class="footer">
  <div class="footer__inner">
    <div class="footer__column">
      <div class="footer__logo">
        {% include 'partials/svg/logo-minimal.svg' %}
      </div>
      <nav class="footer__nav">
        {% include "partials/site/navigation-links" %}
      </nav>
    </div>
    <div class="footer__column footer__about">
      <h2 class="footer__heading">About AntDev</h2>
      <p class="footer__text">
        AntDev is a small software development studio based in Roanoke, Virginia, helping businesses get practical, tailored technology&mdash;not bloated systems they'll never use. I bring 10+ years of professional software development experience and a focus on clear communication and long-term relationships, working with clients both locally and remotely.
      </p>
      <div class="footer__contact">
        <a href="mailto:hey@antdev.sh" class="footer__contact-link">
          <span class="footer__contact-icon" style="-webkit-mask-image: url('/assets/icons/envelope.svg'); mask-image: url('/assets/icons/envelope.svg');" aria-hidden="true"></span>
          hey@antdev.sh
        </a>
        <a href="tel:+12767333682" class="footer__contact-link">
          <span class="footer__contact-icon" style="-webkit-mask-image: url('/assets/icons/phone.svg'); mask-image: url('/assets/icons/phone.svg');" aria-hidden="true"></span>
          (276) 733-3682
        </a>
        <a href="/" class="footer__contact-link">
          <span class="footer__contact-icon" style="-webkit-mask-image: url('/assets/icons/globe.svg'); mask-image: url('/assets/icons/globe.svg');" aria-hidden="true"></span>
          antdev.sh
        </a>
      </div>
    </div>
  </div>
  <span id="copyright">
    &copy; {{ year }} {{ owner }}. All Rights Reserved.
  </span>
</footer>
