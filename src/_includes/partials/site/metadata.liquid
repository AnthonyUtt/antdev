{% if customTitle == true %}
  {% assign pageTitle = title %}
{% else %}
  {% assign pageTitle = title | append: ' | ' | append: site.name %}
{% endif %}

{% assign siteTitle = site.name %}
{% assign currentUrl = site.baseUrl | append: page.url %}

{% comment %}
If the pageâ€™s Front Matter has specific metaTitle and/or metaDesc items, switch 
them into the mix.
{% endcomment %}
{% if metaTitle %}
  {% assign pageTitle = metaTitle %}
{% endif %}

{% if not metaDesc %}
  {% assign metaDesc = summary %}
{% endif %}


<title>{{ pageTitle }}</title>
<link rel="canonical" href="{{ currentUrl }}">
<link rel="alternate" type="application/atom+xml" title="{{ siteTitle }} Blog" href="{{ site.baseUrl }}/feed.xml">
{% if noindex %}
<meta name="robots" content="noindex, nofollow">
{% endif %}

<meta property="og:site_name" content="{{ siteTitle }}">
<meta property="og:title" content="{{ pageTitle }}">
<meta property="og:type" content="{{ ogType | default: 'website' }}">
<meta property="og:url" content="{{ currentUrl }}">

{% assign shareImage = socialImage | default: coverImage %}
{% if shareImage %}
  <meta name="twitter:card" content="summary_large_image">
  <meta property="og:image" content="{{ site.baseUrl }}{{ shareImage }}">
  <meta name="twitter:image" content="{{ site.baseUrl }}{{ shareImage }}">
  <meta property="og:image:alt" content="Page image for {{ site.name }}">
  <meta name="twitter:image:alt" content="Page image for {{ site.name }}">
{% endif %}

{% if metaDesc %}
  <meta name="description" content="{{ metaDesc }}">
  <meta name="twitter:description" content="{{ metaDesc }}">
  <meta property="og:description" content="{{ metaDesc }}">
{% endif %}
