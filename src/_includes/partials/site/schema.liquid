<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "ProfessionalService",
      "@id": "{{ site.baseUrl }}/#organization",
      "name": "{{ site.name }}",
      "description": "{{ site.description }}",
      "url": "{{ site.baseUrl }}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{ site.baseUrl }}/assets/images/logo.png"
      },
      "email": "{{ site.authorEmail }}",
      "areaServed": {
        "@type": "Place",
        "name": "{{ business.areaServed.name }}, {{ business.areaServed.region }}",
        "address": {
          "@type": "PostalAddress",
          "addressRegion": "{{ business.areaServed.region }}",
          "addressCountry": "{{ business.areaServed.country }}"
        }
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Software Development Services",
        "itemListElement": [
          {% for service in business.services %}
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "@id": "{{ site.baseUrl }}/#service-{{ forloop.index }}",
              "name": "{{ service.name }}",
              "description": "{{ service.description }}"
            }
          }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }
    },
    {
      "@type": "WebSite",
      "@id": "{{ site.baseUrl }}/#website",
      "name": "{{ site.name }}",
      "url": "{{ site.baseUrl }}",
      "publisher": {
        "@id": "{{ site.baseUrl }}/#organization"
      }
    }
  ]
}
</script>
